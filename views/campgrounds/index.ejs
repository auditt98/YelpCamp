<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campgrounds</a>
        </div>
    </header>
   <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>"></img>
                    <div class="caption text-center">
                        <h4><%= camp["name"] %></h4>
                    </div>
                    <p class="text-center">
                        <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
   </div> 
</div>

<% include ../partials/footer %>