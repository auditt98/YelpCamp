<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Create a campgrounds</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form method="POST" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" placeholder ="Campground's Name" name="campground[name]">          
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder ="Image link" name="campground[image]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder ="Description" name="campground[description]">
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input class="form-control" type="number" step=0.01 min=0 placeholder ="Price" name="campground[price]">
                    <span class="input-group-addon">per hour</span>
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder ="Address" name="location">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-success">Add</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>

<% include ../partials/footer %>