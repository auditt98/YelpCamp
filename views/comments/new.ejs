<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Add a new comment to <%= camp.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form method="POST" action="/campgrounds/<%= camp._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" placeholder ="Comment" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Add</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Go back</a>
    </div>
</div>

<% include ../partials/footer %>